<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Divine Treats</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid head">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active navMenu" aria-current="page" href="@Url.Action("Index", "Home")">
                            <img class="navBrand"  src="@Url.Content("~/img/joan-craw.png")" alt="Gold-lips">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navMenu" href="@Url.Action("Index", "Flavors")">Flavors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navMenu" href="@Url.Action("Index", "Treats")">Treats</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navMenu" href="@Url.Action("Index", "Account")">Account</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="text-center">
            <h1 class="header">Divine Treats</h1> 
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 Ryan Broadsword - Divine Treats -
            <a href="https://www.youtube.com/watch?v=6AQpxuilKoU" target="_blank">SLAP!</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>