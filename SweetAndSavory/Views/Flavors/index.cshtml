@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
<div class="container">
  <div class="text-center">
    <img src="~/img/wire-hangers.gif" alt="CHRISTINA!" class="joan">
  </div>
  <h2 class="text-center">~Flavors~</h2>

  @if (@Model.Count == 0)
  {
    <h3>No flavors have been added yet!</h3>
  } else {
      <table class="table">
    <thead class="thead-light">
      <th scope="col">#</th>
      <th scope="col">Name</th>
    </thead>
    <tbody>
      @foreach(Flavor flavor in Model)
      {
        <tr>  
          <th scope="row">@Html.DisplayFor(modelFlavor => flavor.FlavorId)</th>
          <td>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</td>
        </tr>
      }
    </tbody>
  </table>
  }

  <p class="text-center navMenu" >@Html.ActionLink("Add new flavor", "Create")</p>
</div>

